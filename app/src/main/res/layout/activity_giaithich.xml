<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playGame"
    android:background="#2095F5"
    android:padding="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtGiaithich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="200dp"
            android:padding="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/mybutton"
            android:text="Giải Thích"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/giaithich" />
            <Button
                android:id="@+id/imagehoitiep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="50dp"
                android:layout_margin="30dp"
                android:layout_gravity="center"
                android:text="             HỎI TIẾp ĐÊ >>"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/wrong_option" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>